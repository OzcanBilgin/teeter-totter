{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "prettier"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "react/state-in-constructor": "off",
        "react/button-has-type" : "off",
        "prettier/prettier": [
            "error",
            {
              "endOfLine": "auto"
            }
          ],
          "jsx-a11y/no-static-element-interactions": "off",
          "react/self-closing-comp": "off",
          "spaced-comment": "off"
    }
}
